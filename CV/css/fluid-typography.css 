@media screen and (min-width: 320px) {
  body {
    /*
    calc([min] + (max - min) * ((100vw - min) / (max-view - min-view))
    */
    font-size: calc(
      16px + (26 - 14) * (
        (100vw - 300px) / (1600 - 300)
      )
    )
  }
}

@media screen and (min-width: 730px) {
  body {
    font-size: 20px;
  }
}